{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        }
      },
      "required": ["displayName", "email"]
    },
    "Video": {
      "title": "Video",
      "description": "Represents a saved video.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "thumbnailUrl": { "type": "string", "format": "uri" },
        "imageHint": { "type": "string" },
        "platform": { "type": "string", "enum": ["instagram", "youtube", "tiktok"] },
        "duration": { "type": "string" },
        "categoryId": { "type": "string" },
        "notes": { "type": "string" },
        "isFavorite": { "type": "boolean" },
        "dateAdded": { "type": "string", "format": "date-time" },
        "originalUrl": { "type": "string", "format": "uri" },
        "owner": { "type": "string", "description": "The UID of the user who owns this video." }
      },
      "required": ["title", "thumbnailUrl", "platform", "categoryId", "dateAdded", "originalUrl", "owner"]
    },
    "Category": {
      "title": "Category",
      "description": "Represents a user-defined category for videos.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "emoji": { "type": "string" },
        "color": { "type": "string" },
        "owner": { "type": "string", "description": "The UID of the user who owns this category." }
      },
      "required": ["name", "emoji", "color", "owner"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public-facing user profile information."
    },
    "/users/{userId}/videos/{videoId}": {
        "schema": { "$ref": "#/entities/Video" },
        "description": "Stores the videos saved by a user."
    },
    "/users/{userId}/categories/{categoryId}": {
        "schema": { "$ref": "#/entities/Category" },
        "description": "Stores the categories created by a user."
    }
  }
}
