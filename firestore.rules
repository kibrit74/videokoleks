rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rule for user's own profile document
    match /users/{userId} {
      allow get, update: if isOwner(userId);
    }

    // Rules for the categories sub-collection
    match /users/{userId}/categories/{categoryId} {
      allow get, create, update, delete: if isOwner(userId);
    }
    
    // Explicitly allow listing the categories collection for the owner
    match /users/{userId}/categories {
        allow list: if isOwner(userId);
    }

    // Rules for the videos sub-collection
    match /users/{userId}/videos/{videoId} {
      allow get, create, update, delete: if isOwner(userId);
    }

    // Explicitly allow listing the videos collection for the owner
    match /users/{userId}/videos {
        allow list: if isOwner(userId);
    }
  }
}
