rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // A user can read and write their own user profile document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'categories' root collection
    match /categories/{categoryId} {
      // A user can read a category if they are the owner.
      allow get: if request.auth.uid == resource.data.userId;
      
      // A user can list categories only if they are querying for their own categories.
      allow list: if request.auth.uid == request.query.filters.userId;

      // A user can create a category if they are setting themselves as the owner.
      allow create: if request.auth.uid == request.resource.data.userId;

      // A user can update or delete a category if they are the owner.
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
    
    // Rules for the 'videos' root collection
    match /videos/{videoId} {
       // A user can read a video if they are the owner.
      allow get: if request.auth.uid == resource.data.userId;
      
      // A user can list videos only if they are querying for their own videos.
      allow list: if request.auth.uid == request.query.filters.userId;

      // A user can create a video if they are setting themselves as the owner.
      allow create: if request.auth.uid == request.resource.data.userId;

      // A user can update or delete a video if they are the owner.
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
