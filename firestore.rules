
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users
    match /users/{userId} {
      // A user can be created by anyone who is signed in,
      // as long as the document ID matches their own user ID.
      allow create: if isSignedIn() && isOwner(userId);
      
      // A user can read, update, or delete their own document.
      allow read, update, delete: if isSignedIn() && isOwner(userId);
    }
    
    // Categories and Videos
    match /users/{userId}/{collection}/{docId} {
        // Users can create documents (categories, videos) under their own user path.
        // The resource's userId must match the authenticated user's ID.
        allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;

        // Users can read, update, or delete their own documents.
        // The existing resource's userId must match the authenticated user's ID.
        allow read, update, delete: if isSignedIn() && isOwner(userId) && resource.data.userId == userId;

        // Users can list documents within their own subcollections.
        allow list: if isSignedIn() && isOwner(userId);
    }
  }
}
