rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Match any document in a user's private space.
    match /users/{userId}/{document=**} {
      // Allow read/write access only to the user who owns this path.
      allow read, write: if isOwner(userId);
    }
    
    // Explicit rules for creating documents to ensure data integrity.
    match /users/{userId}/categories/{categoryId} {
      // Allow create only if the incoming data has the correct owner ID.
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
    }

    match /users/{userId}/videos/{videoId} {
       // Allow create only if the incoming data has the correct owner ID.
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
    }
  }
}
